{
  "name": "signaling-server",
  "version": "1.0.0",
  "description": "a signaling server primarily for webrtc use-case",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch src --ext ts,json --exec \"npm run compile && npm run js:artifacts\"",
    "start:prod": "NODE_ENV=production nodemon dist/main.js",
    "compile": "npx tsc",
    "js:artifacts": "SET NODE_ENV=dev && node dist/main.js",
    "lint": "npx eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "browser:test": "node dist/test/browser/index.js"
  },
  "keywords": [
    "webrtc",
    "signaling",
    "server",
    "communication",
    "peer",
    "to",
    "peer",
    "messaging"
  ],
  "author": "gaurav10610@gmail.com",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "ws": "^8.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@types/node": "^17.0.42",
    "@tsconfig/node16": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  }
}
